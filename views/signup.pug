extends layout

block layout-content
    h1(class="userIntro") Welcome New User!
    h3(class="userIntro") Please provide some basic information for us

    form(id="signupForm", action="/u/signup", method="post")
        input(class="signupForm",type="text", name="firstname", placeholder="First Name")
        br
        input(class="signupForm",type="text", name="lastname", placeholder="Last Name")
        br
        Label(class="signupForm") Education Level
        select(class="signupForm" name="educationlevel") 
            option(value="None") None
            option(value="High School Diploma") High School Diploma
            option(value="College Degree") College Degree
        br
        input(class="signupForm",type="text", name="phonenumber", placeholder="Phone Number")
        br
        input(class="signupForm",type="text", name="email", placeholder="Email")
        br
        input(class="signupForm",type="text", name="dob", placeholder="Date Of Birth")
        br
        input(class="signupForm", type="number", name="age", placeholder="Age")
        br
        Label(class="signupForm") Gender 
        select(class="signupForm" name="gender") 
            option(value="Male") Male
            option(value="Female") Female
            option(value="Prefer Not To Say") Prefer Not To Say 
        br
        input(class="signupForm",type="text", name="username", placeholder="Username")
        br
        input(class="signupForm",type="text", name="password", placeholder="Password")
        br
        input(class="signupForm",type="text", name="confirmPassword", placeholder="Confirm Password")
        br
        Label(class="signupForm") Favorite Number 
        select(class="signupForm" name="Question1") 
            option(value="1") 1
            option(value="2") 2
            option(value="3") 3
        br
        Label(class="signupForm") Second Favorite Number 
        select(class="signupForm" name="Question2") 
            option(value="1") 1
            option(value="2") 2
            option(value="3") 3
        br
        Label(class="signupForm") Third Favorite Number 
        select(class="signupForm" name="Question3") 
            option(value="1") 1
            option(value="2") 2
            option(value="3") 3
        br        
        input(class="signupForm",type="submit", name="submitButton", value="Create Account")
        br

        a(href="/u/login") Already have an account? Sign in
        br 
        a(href="/u/companySignup") Registering for a Company? Click Here 